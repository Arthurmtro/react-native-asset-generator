  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "tests/**/*.spec.ts"],
  "exclude": [
    "tests/output/ios/AppIcon.appiconset/Contents.json",
    "node_modules",
    "dist"
  ]
}
